<cal:FormsApplication
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cal="clr-namespace:Caliburn.Micro.Xamarin.Forms;assembly=Caliburn.Micro.Xamarin.Forms"
    xmlns:cvt="clr-namespace:Discuz.Converters;assembly=Discuz"
    x:Class="Discuz.App">
  <Application.Resources>
    <ResourceDictionary>

      <cvt:HtmlClearConverter x:Key="HtmlClear" />
      
      <Style x:Key="ForumTitle" TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="TextColor" Value="#eeeeee" />
      </Style>
      <Style x:Key="ForumDescription" TargetType="Label">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="TextColor" Value="#dddddd" />
      </Style>
      
      
    </ResourceDictionary>
  </Application.Resources>
</cal:FormsApplication>