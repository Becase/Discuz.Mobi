<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Discuz.Views.PostDetailView">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="80" />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>

    <StackLayout>
      <Image WidthRequest="50"
       HeightRequest="50"
       Source="{Binding Data.AuthorImg}"
       Aspect="AspectFit"
           />
      <Label Text="{Binding Data.Author}" Style="{StaticResource DescLabel}" HorizontalOptions="Center" />
      <Label Text="{Binding Data.Date, Converter={StaticResource HtmlClear}}" Style="{StaticResource DescLabel}" HorizontalOptions="Center" />
    </StackLayout>

    <!--<WebView Source="{Binding Data.Content}" Grid.Row="0" Grid.Column="1" />-->
    <Label Text="{Binding Data.Content, Converter={StaticResource HtmlClear}}" Grid.Column="1" />
  </Grid>

</ContentView>